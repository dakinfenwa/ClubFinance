@model IEnumerable<ClubFinance.Models.Club2>

@{
    ViewBag.Title = "View Clubs";
}

<h3>@ViewBag.Title</h3>

@if (ViewBag.mode == 1)
{
<p>
    @Html.ActionLink("Create New Club", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NickName)
        </td>
        @if (ViewBag.mode == 1) 
        {
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })            
        </td>
        }
        else if (ViewBag.mode == 2)
        {
        <td> 
            @Html.ActionLink("View Membership Option", "Index", "MembershipOption2", new { clubId = item.Id, clubName = item.Name, clubNickName = item.NickName }, null) |
            @Html.ActionLink("Add Membership Option", "Create", "MembershipOption2", new { clubId = item.Id, clubName = item.Name, clubNickName = item.NickName }, null)
        </td>
        }
        else
        {
        <td>
            @Html.ActionLink("Join This Club", "Create", "Membership3", new { clubId = item.Id, clubName = item.Name, clubNickName = item.NickName, userId = 1, userFirstName = "Joe", userLastName = "Bruin" }, null)
        </td>
        }
</tr>    
}

</table>


